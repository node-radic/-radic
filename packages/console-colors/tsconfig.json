{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "lib": ["es2017"],
        "outDir": "./",
        "declarationDir": "./types",
        "typeRoots": [
            "./node_modules/@types",
            "./src/typings"
        ]
    },
    "include": [
        "./src",
        "./src/**/*.d.ts",
        "./test",
        "./test/**/*.d.ts"
    ],
    "exclude": [
        "./node_modules",
        "./types",
        "./*.ts",
        "*.js"
    ],
    "compileOnSave": true
}
